# Workflow to build and release project artifacts
# This workflow is manually triggered via the GitHub UI

name: Build and Release

on:
  workflow_dispatch:  # Manual trigger only
    inputs:
      tag:
        description: 'Release tag (e.g. v1.2.3)'
        required: true
        type: string

# Permissions needed for the workflow
permissions:
  contents: write  # Allows the workflow to write to the repository (create tags)
  packages: write  # Allows the workflow to write to GitHub Packages (for Docker images)

jobs:
  # Job to set the tag based on input
  tagging:
    runs-on: ubuntu-latest
    outputs:
      new_tag: {% raw %}${{ steps.set_tag.outputs.tag }}{% endraw %}  # Output the tag to be used by other jobs

    steps:
      - name: Checkout [{% raw %}${{ github.repository }}{% endraw %}]
        uses: actions/checkout@v4  # Check out the repository code

      - name: Create and Push Tag
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git tag -a "{% raw %}${{ github.event.inputs.tag }}{% endraw %}" -m "Release {% raw %}${{ github.event.inputs.tag }}{% endraw %}"
          git push origin "{% raw %}${{ github.event.inputs.tag }}{% endraw %}"

      # Create a GitHub release for the tag
      # This creates a release on GitHub with automatically generated release notes
      - name: Create GitHub release
        uses: softprops/action-gh-release@v2.3.2  # Third-party release action
        with:
          token: ${{ secrets.GITHUB_TOKEN }}  # Token for authentication
          tag_name: ${{ github.event.inputs.tag }}  # Use the provided tag
          generate_release_notes: true  # Automatically generate notes from commits

  marimo:
    runs-on: ubuntu-latest  # Use the latest Ubuntu runner
    permissions:
      contents: read
    steps:
      - uses: jebel-quant/marimushka/@v0.1.4
        with:
          notebooks_wasm: ''
          notebooks: 'notebooks'
          apps: ''

  book:
    permissions:
      pages: write            # Permission to deploy to Pages
      id-token: write         # Permission to verify deployment origin
    runs-on: ubuntu-latest
    needs: [ marimo ]           # This job depends on both jupyter and marimo jobs
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Publish book    # specify the path to avoid direct exposure of marimushka
        id: deployment
        uses: tschm/cradle/actions/book@v0.2.0
        with:
          title: "My project"
          links: |
            {
              "Notebooks": "./marimushka/index.html"
            }

{% if use_latex %}
  # Job to build and publish LaTeX document (only included if use_latex is true)
  latex:
    runs-on: ubuntu-latest
    needs: tagging  # This job depends on the tagging job
    steps:
      - name: "Output tag"
        run: |
          echo "Tag: {% raw %}${{ needs.tagging.outputs.new_tag }}{% endraw %}"  # Print the new tag

      - name: "Build and publish the LaTeX document"
        uses: tschm/cradle/actions/latex@v0.2.0  # Custom action to build LaTeX documents
        with:
          paper: paper/document.tex  # Path to the LaTeX document to build
          tag: {% raw %}${{ needs.tagging.outputs.new_tag }}{% endraw %}  # Tag from the tagging job
{% endif %}
